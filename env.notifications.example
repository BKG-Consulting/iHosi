# Healthcare Notification System Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================

# Option 1: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourclinic.com
FROM_NAME=Your Clinic Name

# Option 2: AWS SES
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# FROM_EMAIL=noreply@yourclinic.com

# Option 3: Mailgun
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=yourclinic.com
# FROM_EMAIL=noreply@yourclinic.com

# =============================================================================
# SMS SERVICE CONFIGURATION
# =============================================================================

# Option 1: Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Option 2: AWS SNS
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_SNS_TOPIC_ARN=arn:aws:sns:region:account:topic-name

# =============================================================================
# NOTIFICATION SYSTEM CONFIGURATION
# =============================================================================

# Enable/disable notification channels
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_IN_APP_NOTIFICATIONS=true

# Notification timing (in hours)
REMINDER_24_HOURS_BEFORE=true
REMINDER_2_HOURS_BEFORE=true
REMINDER_1_HOUR_BEFORE=true
CONFIRMATION_1_HOUR_AFTER=true
FOLLOW_UP_24_HOURS_AFTER=true

# Custom reminder timing (comma-separated hours before appointment)
CUSTOM_REMINDER_HOURS=48,24,12,2,1

# Timezone for scheduling (default: UTC)
NOTIFICATION_TIMEZONE=UTC

# =============================================================================
# CLINIC INFORMATION
# =============================================================================

CLINIC_NAME=Your Healthcare Clinic
CLINIC_ADDRESS=123 Medical Center Drive
CLINIC_PHONE=+1-555-123-4567
CLINIC_WEBSITE=https://yourclinic.com
CLINIC_LOGO_URL=https://yourclinic.com/logo.png

# =============================================================================
# NOTIFICATION TEMPLATES
# =============================================================================

# Custom email templates (optional - uses defaults if not specified)
CUSTOM_EMAIL_TEMPLATE_APPOINTMENT_BOOKED=
CUSTOM_EMAIL_TEMPLATE_APPOINTMENT_REMINDER=
CUSTOM_EMAIL_TEMPLATE_APPOINTMENT_CANCELLED=

# =============================================================================
# AUDIT & COMPLIANCE
# =============================================================================

# Enable detailed logging
ENABLE_NOTIFICATION_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# HIPAA compliance settings
LOG_PHI_ACCESS=true
ENCRYPT_NOTIFICATION_DATA=true

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Reminder processing interval (in minutes)
REMINDER_PROCESSING_INTERVAL=5

# Batch size for processing reminders
REMINDER_BATCH_SIZE=100

# Maximum concurrent notifications
MAX_CONCURRENT_NOTIFICATIONS=50

# =============================================================================
# TESTING & DEVELOPMENT
# =============================================================================

# Enable debug mode
DEBUG_NOTIFICATIONS=false

# Test mode (prevents actual sending)
TEST_MODE=false

# Mock email addresses for testing
TEST_EMAIL_PATIENT=test.patient@example.com
TEST_EMAIL_DOCTOR=test.doctor@example.com

# =============================================================================
# INTEGRATION WEBHOOKS
# =============================================================================

# Webhook URLs for external integrations
WEBHOOK_APPOINTMENT_CREATED=
WEBHOOK_APPOINTMENT_UPDATED=
WEBHOOK_APPOINTMENT_CANCELLED=

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum notifications per hour per recipient
MAX_NOTIFICATIONS_PER_HOUR=10

# Maximum SMS per day per recipient
MAX_SMS_PER_DAY=5

# Cooldown period between similar notifications (in minutes)
NOTIFICATION_COOLDOWN_MINUTES=30

# =============================================================================
# FALLBACK & ERROR HANDLING
# =============================================================================

# Retry failed notifications
ENABLE_NOTIFICATION_RETRY=true
MAX_NOTIFICATION_RETRIES=3
RETRY_DELAY_MINUTES=15

# Fallback notification channel if primary fails
FALLBACK_NOTIFICATION_CHANNEL=EMAIL

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Send alerts for notification failures
ALERT_ON_NOTIFICATION_FAILURE=true
ALERT_EMAIL=admin@yourclinic.com

# Monitor notification delivery rates
MONITOR_DELIVERY_RATES=true
MINIMUM_DELIVERY_RATE=95

# =============================================================================
# PATIENT PREFERENCES
# =============================================================================

# Default notification preferences for new patients
DEFAULT_EMAIL_NOTIFICATIONS=true
DEFAULT_SMS_NOTIFICATIONS=true
DEFAULT_IN_APP_NOTIFICATIONS=true

# Allow patients to customize notification timing
ALLOW_CUSTOM_REMINDER_TIMING=true

# =============================================================================
# DOCTOR & STAFF NOTIFICATIONS
# =============================================================================

# Notify doctors of new appointments
NOTIFY_DOCTORS_OF_NEW_APPOINTMENTS=true

# Notify doctors before appointments
NOTIFY_DOCTORS_BEFORE_APPOINTMENTS=true
DOCTOR_NOTIFICATION_MINUTES_BEFORE=60

# Staff notification settings
NOTIFY_STAFF_OF_APPOINTMENT_CHANGES=true
STAFF_NOTIFICATION_EMAILS=reception@yourclinic.com,admin@yourclinic.com
