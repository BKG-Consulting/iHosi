# Security Configuration for Healthcare Management System
# Copy this to .env.local and update with your values

# JWT Secrets (REQUIRED - Generate strong secrets)
JWT_ACCESS_SECRET=your-32-character-access-secret-key-here
JWT_REFRESH_SECRET=your-32-character-refresh-secret-key-here

# PHI Encryption (REQUIRED - Generate strong encryption key)
PHI_ENCRYPTION_KEY=your-64-character-hex-encryption-key-here
PHI_ENCRYPTION_SALT=your-encryption-salt-here

# Database Security
DATABASE_URL=postgresql://username:password@localhost:5432/healthcare_db?sslmode=require

# Rate Limiting (Optional - Redis for production)
UPSTASH_REDIS_REST_URL=your-redis-url-here
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Email Service (for MFA and security alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security Headers
NEXT_PUBLIC_APP_URL=https://your-domain.com

# MFA Configuration
MFA_ISSUER=iHosi Healthcare Management System
MFA_ALGORITHM=sha1
MFA_DIGITS=6
MFA_PERIOD=30

# Session Configuration
SESSION_TIMEOUT_MINUTES=480
MAX_CONCURRENT_SESSIONS=1
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting Rules
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW_MINUTES=15
RATE_LIMIT_MFA_ATTEMPTS=10
RATE_LIMIT_MFA_WINDOW_MINUTES=5
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW_MINUTES=15

# Security Monitoring
SECURITY_ALERT_EMAIL=security@your-domain.com
AUDIT_LOG_RETENTION_DAYS=2555


